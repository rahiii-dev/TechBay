<div class="login-wrapper">
    <div class="login-content">
      <div class="login-userset">
        <div class="login-logo">
          <img src="/static/logo/logo.png" alt="img" />
        </div>
        <div class="login-userheading">
          <h3>Admin Login</h3>
        </div>

        <form action="/admin/login" method="post">
            <div class="form-login">
              <label>Email</label>
              <div class="form-addons">
                <input name="email" type="text" placeholder="Enter your email address" value="<%= locals.errorObj?.email || '' %>" />
                <img src="/static/backend/assets/img/icons/mail.svg" alt="img" />
              </div>
              <% if(locals.errorObj && errorObj.emailError) { %>
                <p class="text-danger"><%= errorObj.emailError %></p>
              <% } %>
            </div>
            <div class="form-login">
              <label>Password</label>
              <div class="pass-group">
                <input
                  name="password"
                  type="password"
                  class="pass-input"
                  placeholder="Enter your password"
                />
                <span class="fas toggle-password fa-eye-slash"></span>
              </div>
              <% if(locals.errorObj && errorObj.passwordError) { %>
                <p class="text-danger"><%= errorObj.passwordError %></p>
             <% } %>
            </div>
            <div class="form-login">
              <div class="alreadyuser">
                <h4>
                  <a href="forgetpassword.html" class="hover-a text-dark"
                    >Forgot Password?</a
                  >
                </h4>
              </div>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark">Login</button>
            </div>
        </form>
        
